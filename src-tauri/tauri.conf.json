{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Directory Size Scanner",
  "version": "0.1.0",
  "identifier": "com.searchtool.scanner",
  "build": {
    "beforeDevCommand": "cd src-tauri/app && npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "app/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Directory Size Scanner",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:;"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
